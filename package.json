{
  "name": "@johngw/js-util",
  "version": "0.0.0",
  "description": "The js-util mono-repo",
  "main": "index.js",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "yarn workspaces foreach --topological-dev --exclude @johngw/generator run build",
    "clean": "yarn workspaces foreach run clean",
    "build:generator": "yarn workspace @johngw/generator run build",
    "commit": "yarn git-cz",
    "package:generate": "yo ./packages/generator/generators/package-generate",
    "package:remove": "yo ./packages/generator/generators/package-remove",
    "release": "yarn workspaces foreach --no-private --topological-dev run semantic-release",
    "start": "yarn build && yarn workspaces foreach --no-private --parallel --interlaced run start",
    "test": "yarn workspaces foreach run test",
    "prepare": "yarn husky install"
  },
  "author": "",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/johngeorgewright/js-util/issues"
  },
  "homepage": "https://github.com/johngeorgewright/js-util#readme",
  "devDependencies": {
    "@commitlint/cli": "17.6.1",
    "@commitlint/config-conventional": "17.6.1",
    "@commitlint/config-lerna-scopes": "17.4.2",
    "@commitlint/types": "17.4.4",
    "@semantic-release/commit-analyzer": "9.0.2",
    "@semantic-release/exec": "6.0.3",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/github": "8.0.7",
    "@semantic-release/release-notes-generator": "10.0.3",
    "@types/prettier": "2.7.2",
    "@yarks/cli": "1.1.3",
    "commitizen": "4.3.0",
    "cz-conventional-changelog": "3.3.0",
    "husky": "8.0.3",
    "isbinaryfile": "5.0.0",
    "json-parse-even-better-errors": "2.3.1",
    "lint-staged": "13.2.1",
    "mkdirp-infer-owner": "2.0.0",
    "prettier": "2.8.8",
    "semantic-release": "19.0.5",
    "semantic-release-monorepo": "7.0.5",
    "typescript": "4.7.4",
    "yo": "4.3.1"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{md,json,js,jsx,ts,tsx,yml,yaml}": [
      "yarn prettier --write"
    ]
  },
  "packageManager": "yarn@3.5.0"
}
