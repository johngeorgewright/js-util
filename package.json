{
  "name": "@johngw/js-util",
  "version": "0.0.0",
  "description": "The js-util mono-repo",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "yarn workspaces foreach --all --topological-dev --exclude @johngw/generator --verbose --parallel run build",
    "clean": "yarn workspaces foreach run clean --verbose",
    "commit": "git-cz",
    "package:generate": "node --require ts-node/register $(yarn bin yo) ./packages/generator/src/package-generate",
    "package:remove": "node --require ts-node/register $(yarn bin yo) ./packages/generator/src/package-remove",
    "release": "yarn workspaces foreach --no-private --topological-dev --verbose run semantic-release",
    "start": "yarn build && yarn workspaces foreach --no-private --all --parallel --interlaced --verbose run start",
    "test": "yarn workspaces foreach --verbose --all run test",
    "prepare": "husky"
  },
  "author": "",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/johngeorgewright/js-util/issues"
  },
  "homepage": "https://github.com/johngeorgewright/js-util#readme",
  "devDependencies": {
    "@commitlint/cli": "20.1.0",
    "@commitlint/config-conventional": "20.0.0",
    "@types/prettier": "3.0.0",
    "commitizen": "4.3.1",
    "cz-conventional-changelog": "3.3.0",
    "husky": "9.1.7",
    "lerna": "^9.0.0",
    "lint-staged": "16.2.5",
    "prettier": "3.6.2",
    "typescript": "5.9.3",
    "yo": "5.1.0"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{md,json,js,jsx,ts,tsx,yml,yaml}": [
      "yarn prettier --write"
    ]
  },
  "packageManager": "yarn@4.10.3"
}
