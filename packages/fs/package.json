{
  "name": "@johngw/fs",
  "version": "2.0.1",
  "description": "JS/TS File System Utilities.",
  "main": "dist/index.js",
  "sideEffects": false,
  "scripts": {
    "build": "yarn clean && yarn tsc && yarn rimraf 'dist/**/?(__tests__|__mocks__|__setup__|*.test.*)'",
    "clean": "yarn rimraf dist",
    "release": "yarn semantic-release -e semantic-release-monorepo",
    "start": "yarn tsc --watch --preserveWatchOutput",
    "test": "yarn jest --runInBand"
  },
  "author": "John Wright <johngeorge.wright@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/johngeorgewright/js-util/issues"
  },
  "homepage": "https://github.com/johngeorgewright/js-util#readme",
  "devDependencies": {
    "@johngw/async-iterator": "workspace:*",
    "@semantic-release/commit-analyzer": "9.0.2",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/github": "8.0.4",
    "@semantic-release/npm": "9.0.1",
    "@semantic-release/release-notes-generator": "10.0.3",
    "@types/jest": "27.4.1",
    "@types/node": "16.11.29",
    "jest": "27.5.1",
    "rimraf": "3.0.2",
    "semantic-release": "19.0.2",
    "semantic-release-monorepo": "7.0.5",
    "ts-jest": "27.1.4",
    "typescript": "4.6.3"
  },
  "dependencies": {
    "tslib": "^2.3.1"
  }
}
